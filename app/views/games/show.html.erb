<h2><%= @game.name %> Streams!</h2>
<%= link_to "Back to Games Index", games_path %>
<ol>
  <% @streams.each do |stream| %>
    <li>
      <%= link_to (image_tag stream.preview), stream_path(stream) %>
      <%= stream.name %> - <%= stream.status %>
      Viewers: <%= stream.viewers %>
    </li>
  <% end %>
</ol>